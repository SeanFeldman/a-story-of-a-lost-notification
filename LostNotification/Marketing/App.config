<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<configuration>
  <configSections>
    <section name="MessageForwardingInCaseOfFaultConfig" type="NServiceBus.Config.MessageForwardingInCaseOfFaultConfig, NServiceBus.Core" />
    <section name="UnicastBusConfig" type="NServiceBus.Config.UnicastBusConfig, NServiceBus.Core" />
    <section name="AuditConfig" type="NServiceBus.Config.AuditConfig, NServiceBus.Core" />
  </configSections>

  <MessageForwardingInCaseOfFaultConfig ErrorQueue="error" />
  <AuditConfig QueueName="audit" />
  
  <UnicastBusConfig>
    <MessageEndpointMappings>
      <!-- subscribe to events -->
      <add Assembly="Messages" Namespace="Messages.Registration.Events" Endpoint="Registration" />
      <!-- send commands -->
      <!-- ops, logical mistake - `Notification` owns the command, so namespace should be `Messages.Notification.Commands` -->
      <add Assembly="Messages" Namespace="Messages.Registration.Commands" Endpoint="Notification" />
    </MessageEndpointMappings>
  </UnicastBusConfig>

</configuration>